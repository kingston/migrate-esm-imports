{
  "name": "migrate-esm-imports",
  "version": "0.1.2",
  "description": "Migrate CommonJS imports to ESM imports with extensions",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kingston/migrate-esm-imports"
  },
  "license": "MIT",
  "author": "Kingston Tam",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": "./dist/index.js"
  },
  "main": "dist/index.js",
  "bin": "dist/cli.js",
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "preinstall": "npx only-allow pnpm",
    "lint": "eslint .",
    "prettier:check": "prettier --check .",
    "prettier:write": "prettier -w .",
    "release": "pnpm build && pnpm changeset publish",
    "start": "node dist/cli.js",
    "test": "vitest"
  },
  "dependencies": {
    "commander": "14.0.1",
    "get-tsconfig": "4.10.1",
    "globby": "14.1.0",
    "jscodeshift": "17.3.0",
    "p-limit": "7.1.1"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.7",
    "@ktam/lint-node": "0.5.1",
    "@tsconfig/node22": "22.0.2",
    "@types/jscodeshift": "17.3.0",
    "@types/node": "24.5.2",
    "eslint": "9.36.0",
    "memfs": "4.43.0",
    "prettier": "3.6.2",
    "tsx": "4.20.5",
    "typescript": "5.8.2",
    "vitest": "3.2.4"
  },
  "packageManager": "pnpm@10.17.0",
  "engines": {
    "node": ">=20",
    "pnpm": ">=9"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
